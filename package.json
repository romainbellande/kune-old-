{
  "name": "root",
  "private": true,
  "scripts": {
    "analysis": "npx lerna exec -- yarn lint",
    "test": "npx lerna exec -- yarn test"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "conventional-changelog-cli": "^2.0.31",
    "husky": "^4.2.5",
    "lerna": "^3.20.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn analysis",
      "pre-push": "yarn test"
    }
  }
}
